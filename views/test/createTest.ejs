    <title>Create Test</title>
</head>

<body>
    <h1>Create Test</h1>
    <form action="/test/create" method="POST">
        <label for="name">Test Name:</label>
        <input type="text" id="name" name="name" required>
        <label for="category">Category:</label>
        <select id="categorySelect" name="category" onchange="getQuestionsBySelectedCategory()">
            <% categories.forEach(category=> { %>
                <option value="<%= category._id %>">
                    <%= category.name %>
                </option>
            <% }); %>
        </select>
        

        <div id="questionList"></div>
        <label for="questions">Questions:</label>
        <!-- Checkbox for selecting questions from a list -->
        <!-- Loop through available questions -->
        <% questions.forEach(question=> { %>
            <input type="checkbox" id="<%= question._id %>" name="questions" value="<%= question.content %>">
            <label for="<%= question._id %>">
                <%= question.content %>
            </label><br>
            <% }); %>
                <!-- End loop -->
                <button type="submit">Create</button>
    </form>

